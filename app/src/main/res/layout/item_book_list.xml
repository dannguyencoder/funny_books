<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdw_thumbnail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:placeholderImage="@drawable/trolll_face"/>

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="wrap_content"
        android:text="This is a title"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdw_thumbnail"/>

    <TextView
        android:id="@+id/tv_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="This is a author"
        android:layout_below="@id/tv_book_name"/>

    <TextView
        android:id="@+id/tv_book_shortDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="This is a short description"
        android:layout_below="@id/tv_book_author"/>

</RelativeLayout>